---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro + JQuery-terminal tool for a Lancer TTRPG campaign" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script is:inline src="https://cdn.jsdelivr.net/npm/jquery"></script>
		<script is:inline
			src="https://cdn.jsdelivr.net/npm/jquery.terminal/js/jquery.terminal.min.js"
		></script>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/jquery.terminal/css/jquery.terminal.min.css"
		/>
		<script is:inline
			src="https://cdnjs.cloudflare.com/ajax/libs/jquery.terminal/2.39.3/js/jquery.terminal.min.js"
		></script>
	</head>
	<body>
		<slot />
	</body>
</html>
